!!!
%html
  %head
    %title Web App
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          =link_to "LAYA admin", admin_root_path
        - if current_user
          #user-navigation
            %ul.wat-cf
              %li
                = link_to "My Profile", edit_admin_user_path(current_user)
              %li
                = link_to "Logout", destroy_user_session_path
        #main-navigation
          %ul.wat-cf
            %li= link_to "Users", admin_users_path
            %li= link_to "Projects", admin_projects_path
            %li= link_to "Clients", admin_clients_path
            %li= link_to "Plugins", admin_plugins_path

      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} Laya.
        / #sidebar
        /   = yield :sidebar
