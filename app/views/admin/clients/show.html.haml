.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_clients_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_client_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_client_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_client.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @client.name
      %p
        %b
          = t("activerecord.attributes.admin_client.api_key", :default => t("activerecord.labels.api_key", :default => "Api key"))
          \:
        = @client.api_key
      %p
        %b
          = t("activerecord.attributes.admin_client.user_id", :default => t("activerecord.labels.user_id", :default => "User"))
          \:
        = @client.user_id
      %p
        %b
          = t("activerecord.attributes.admin_client.project_id", :default => t("activerecord.labels.project_id", :default => "Project"))
          \:
        = @client.project_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_client_path(@client), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_client_path(@client), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
