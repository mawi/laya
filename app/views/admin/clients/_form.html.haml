.group
  = f.label :name, t("activerecord.attributes.client.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
- if current_user.is_admin
  .group
    = f.label "User", :class => :label
    = f.select :user_id, User.all.collect {|p| [ p.email, p.id ]}, :class => :select
.group
  = f.label :project_id, t("activerecord.attributes.client.project_id", :default => "Project"), :class => :label
  = f.select :project_id, Project.all.collect {|p| [ p.name, p.id ]}, :class => :select
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_clients_path, :class => "text_button_padding link_button"
