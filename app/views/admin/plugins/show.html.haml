.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_plugins_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_plugin_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_plugin.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @plugin.name
      %table.table
        %thead
          %th Keyword
          %th Trigger
        %tbody
          = render @plugin.keywords
