.columns.wat-cf
  .column.left
    .group
      = f.label :email, t("activerecord.attributes.user.email", :default => "Email (*)"), :class => :label
      = f.text_field :email, :class => 'text_field'
      %span.description Ex: user@example.com
    .group
      = f.label :password, "Password (*)", :class => :label
      = f.text_field :password, :class => 'text_field'
    .group
      = f.label :password_confirmation, "Password confirmation (*)" , :class => :label
      = f.text_field :password_confirmation, :class => 'text_field'
  - if can?(:manage, User)
    .column.right
      =f.label "User Options", :class => 'label'
      .group
        = f.check_box :approved, :class => 'checkbox'
        = f.label :approved, t("activerecord.attributes.user.approved", :default => "Approved"), :class => 'checkbox'

      .group
        = f.check_box :is_admin, :class => 'checkbox'
        = f.label :is_admin, t("activerecord.attributes.user.is_admin", :default => "Is admin"), :class => 'checkbox'

.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_users_path, :class => "text_button_padding link_button"
