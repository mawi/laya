.columns.wat-cf
  .column.left
    .group
      = f.label :name, t("activerecord.attributes.project.name", :default => "Name"), :class => :label
      = f.text_field :name, :class => 'text_field'
    .group
      = f.label :description, t("activerecord.attributes.project.description", :default => "Description"), :class => :label
      = f.text_area :description, :class => 'text_area'
  .column.right
    - @project.project_settings.group_by(&:plugin).each do |plugin,plugin_project_setting|
      = f.label "#{plugin.name} settings", :class => "label"
      = f.fields_for :project_settings, plugin_project_setting do |ps|
        .group
          = ps.object.name
          = ps.text_field :value
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_projects_path, :class => "text_button_padding link_button"

